<local:ReactiveDialogWindow x:Class="Calculator.DialogWindow"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:local="clr-namespace:Calculator"
                            xmlns:resx="clr-namespace:Calculator.Properties"
                            mc:Ignorable="d" Height="200" Width="260"
                            WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock x:Name="TextBlock" Grid.Row="0" Height="90"
                   TextAlignment="Left" TextWrapping="Wrap" />

        <Button x:Name="OkButton" Grid.Row="1" FontSize="26" VerticalAlignment="Center"
                HorizontalAlignment="Right" Margin="0,0,40,10" Padding="10,2"
                IsDefault="True" IsCancel="True"
                Content="{x:Static resx:Messages.OK}" />
    </Grid>
</local:ReactiveDialogWindow>
