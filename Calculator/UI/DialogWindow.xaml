<Window x:Class="Calculator.UI.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Title="Error" Height="200" Width="260"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="120" />
			<RowDefinition />
		</Grid.RowDefinitions>
		
		<TextBlock x:Name="textBlock" Grid.Row="0" FontSize="20"
		           Width="200" Height="90" TextAlignment="Left"
				   TextWrapping="Wrap" />
		
		<Button x:Name="btnOK" Grid.Row="1" FontSize="26"
		        VerticalAlignment="Center" Padding="10,2"
		        HorizontalAlignment="Right" Margin="0,0,40,10"
		        Click="OK_Click" IsDefault="True" IsCancel="True">
			OK
		</Button>
	</Grid>
</Window>
